{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist/"
  },
  "include": ["src"],
  "exclude": ["example", "node_modules"]
}